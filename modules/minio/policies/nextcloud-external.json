{
    "ID": "NextcloudExternalRepoPolicy",
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowObjects",
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::nextcloud-external/*"
            ]
        },
        {
            "Sid": "AllowRepo",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::nextcloud-external"
            ]
        }
    ]
}
